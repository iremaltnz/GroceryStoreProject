
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Stok</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    @foreach (System.Data.DataRow DR in ViewBag.emprecord.Rows)
    {
<form action="/Stock/Add" method="post">

    <h3>
        Stok Bilgilerini Girin

    </h3>

    <label>
        <span>Stok Adedi :</span>
        <input type="number" name="s_quantity" style="margin-top:50px" />

    </label>
    <label>
        <span>Giris Tarihi :</span>
        <input type="date" name="entry_date" placeholder="" style="margin-top:50px" />
    </label>
    <label>
        <span>Bitis Tarihi :</span>
        <input type="date" name="end_date" placeholder="" style="margin-top:50px" />

    </label>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-default" />
        </div>

    </div>

</form>

     
    }


</div>
}